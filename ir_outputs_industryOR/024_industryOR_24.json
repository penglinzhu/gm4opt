  "objective": {
    "name": "max_revenue",
    "sense": "max",
    "expr": "sum((production_per_worker * total_workers[m] + extra_units[m] - demand[m]) * storage_cost - extra_units[m] * extra_unit_cost - hired_workers[m] * hiring_cost - laid_off_workers[m] * layoff_cost for m in MONTHS)",
    "description": "Maximize revenue by balancing production, storage, hiring, and layoffs"
  },
  "constraints": [
    {
      "name": "initial_workers_constraint",
      "expr_lhs": "total_workers['1']",
      "sense": "==",
      "expr_rhs": "initial_workers + hired_workers['1'] - laid_off_workers['1']",
      "description": "Initial workers constraint for month 1"
    },
    {
      "name": "worker_balance_2",
      "expr_lhs": "total_workers['2']",
      "sense": "==",
      "expr_rhs": "total_workers['1'] + hired_workers['2'] - laid_off_workers['2']",
      "description": "Worker balance for month 2"
    },
    {
      "name": "worker_balance_3",
      "expr_lhs": "total_workers['3']",
      "sense": "==",
      "expr_rhs": "total_workers['2'] + hired_workers['3'] - laid_off_workers['3']",
      "description": "Worker balance for month 3"
    },
    {
      "name": "worker_balance_4",
      "expr_lhs": "total_workers['4']",
      "sense": "==",
      "expr_rhs": "total_workers['3'] + hired_workers['4'] - laid_off_workers['4']",
      "description": "Worker balance for month 4"
    },
    {
      "name": "worker_balance_5",
      "expr_lhs": "total_workers['5']",
      "sense": "==",
      "expr_rhs": "total_workers['4'] + hired_workers['5'] - laid_off_workers['5']",
      "description": "Worker balance for month 5"
    },
    {
      "name": "worker_balance_6",
      "expr_lhs": "total_workers['6']",
      "sense": "==",
      "expr_rhs": "total_workers['5'] + hired_workers['6'] - laid_off_workers['6']",
      "description": "Worker balance for month 6"
    },
    {
      "name": "max_worker_change_1",
      "expr_lhs": "hired_workers['1'] + laid_off_workers['1']",
      "sense": "<=",
      "expr_rhs": "max_worker_change",
      "description": "Maximum worker change for month 1"
    },
    {
      "name": "max_worker_change_2",
      "expr_lhs": "hired_workers['2'] + laid_off_workers['2']",
      "sense": "<=",
      "expr_rhs": "max_worker_change",
      "description": "Maximum worker change for month 2"
    },
    {
      "name": "max_worker_change_3",
      "expr_lhs": "hired_workers['3'] + laid_off_workers['3']",
      "sense": "<=",
      "expr_rhs": "max_worker_change",
      "description": "Maximum worker change for month 3"
    },
    {
      "name": "max_worker_change_4",
      "expr_lhs": "hired_workers['4'] + laid_off_workers['4']",
      "sense": "<=",
      "expr_rhs": "max_worker_change",
      "description": "Maximum worker change for month 4"
    },
    {
      "name": "max_worker_change_5",
      "expr_lhs": "hired_workers['5'] + laid_off_workers['5']",
      "sense": "<=",
      "expr_rhs": "max_worker_change",
      "description": "Maximum worker change for month 5"
    },
    {
      "name": "max_worker_change_6",
      "expr_lhs": "hired_workers['6'] + laid_off_workers['6']",
      "sense": "<=",
      "expr_rhs": "max_worker_change",
      "description": "Maximum worker change for month 6"
    },
    {
      "name": "production_capacity_1",
      "expr_lhs": "extra_units['1']",
      "sense": "<=",
      "expr_rhs": "total_workers['1'] * max_extra_units_per_worker",
      "description": "Production capacity for extra units in month 1"
    },
    {
      "name": "production_capacity_2",
      "expr_lhs": "extra_units['2']",
      "sense": "<=",
      "expr_rhs": "total_workers['2'] * max_extra_units_per_worker",
      "description": "Production capacity for extra units in month 2"
    },
    {
      "name": "production_capacity_3",
      "expr_lhs": "extra_units['3']",
      "sense": "<=",
      "expr_rhs": "total_workers['3'] * max_extra_units_per_worker",
      "description": "Production capacity for extra units in month 3"
    },
    {
      "name": "production_capacity_4",
      "expr_lhs": "extra_units['4']",
      "sense": "<=",
      "expr_rhs": "total_workers['4'] * max_extra_units_per_worker",
      "description": "Production capacity for extra units in month 4"
    },
    {
      "name": "production_capacity_5",
      "expr_lhs": "extra_units['5']",
      "sense": "<=",
      "expr_rhs": "total_workers['5'] * max_extra_units_per_worker",
      "description": "Production capacity for extra units in month 5"
