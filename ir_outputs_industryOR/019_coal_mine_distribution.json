{
  "meta": {
    "problem_id": "coal_mine_distribution",
    "source": null,
    "description": "Coal distribution problem to minimize ton-kilometers of transportation",
    "sense": "min",
    "version": 0
  },
  "sets": [
    {
      "name": "MINES",
      "elements": [
        "A",
        "B"
      ],
      "description": "Coal mines"
    },
    {
      "name": "AREAS",
      "elements": [
        "Area1",
        "Area2",
        "Area3"
      ],
      "description": "Residential areas"
    }
  ],
  "params": [
    {
      "name": "supply",
      "indices": [
        "MINES"
      ],
      "values": {
        "A": 80.0,
        "B": 100.0
      },
      "description": "Monthly coal supply from each mine in tons"
    },
    {
      "name": "demand",
      "indices": [
        "AREAS"
      ],
      "values": {
        "Area1": 55.0,
        "Area2": 75.0,
        "Area3": 50.0
      },
      "description": "Monthly coal demand for each residential area in tons"
    },
    {
      "name": "distance",
      "indices": [
        "MINES",
        "AREAS"
      ],
      "values": {
        "A": {
          "Area1": 10.0,
          "Area2": 5.0,
          "Area3": 6.0
        },
        "B": {
          "Area1": 4.0,
          "Area2": 8.0,
          "Area3": 15.0
        }
      },
      "description": "Distances in kilometers from each mine to each residential area"
    }
  ],
  "vars": [
    {
      "name": "x",
      "indices": [
        "MINES",
        "AREAS"
      ],
      "vartype": "continuous",
      "lb": 0.0,
      "ub": null,
      "description": "x[m][a] = tons of coal transported from mine m to area a"
    }
  ],
  "objective": {
    "name": "min_ton_kilometers",
    "sense": "min",
    "expr": "sum(distance[m][a] * x[m][a] for m in MINES for a in AREAS)",
    "description": "Minimize the total ton-kilometers of coal transportation"
  },
  "constraints": [
    {
      "name": "supply_constraint_A",
      "expr_lhs": "sum(x['A'][a] for a in AREAS)",
      "sense": "<=",
      "expr_rhs": "supply['A']",
      "description": "Supply constraint for mine A"
    },
    {
      "name": "supply_constraint_B",
      "expr_lhs": "sum(x['B'][a] for a in AREAS)",
      "sense": "<=",
      "expr_rhs": "supply['B']",
      "description": "Supply constraint for mine B"
    },
    {
      "name": "demand_constraint_Area1",
      "expr_lhs": "sum(x[m]['Area1'] for m in MINES)",
      "sense": "==",
      "expr_rhs": "demand['Area1']",
      "description": "Demand constraint for Area 1"
    },
    {
      "name": "demand_constraint_Area2",
      "expr_lhs": "sum(x[m]['Area2'] for m in MINES)",
      "sense": "==",
      "expr_rhs": "demand['Area2']",
      "description": "Demand constraint for Area 2"
    },
    {
      "name": "demand_constraint_Area3",
      "expr_lhs": "sum(x[m]['Area3'] for m in MINES)",
      "sense": "==",
      "expr_rhs": "demand['Area3']",
      "description": "Demand constraint for Area 3"
    }
  ],
  "graph": null
}