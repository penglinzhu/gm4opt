{
  "meta": {
    "problem_id": "course_selection",
    "source": null,
    "description": "Select courses to meet category and prerequisite requirements for a master's student.",
    "sense": "min",
    "version": 1
  },
  "sets": [
    {
      "name": "COURSES",
      "elements": [
        "calculus",
        "operations_research",
        "data_structures",
        "management_statistics",
        "computer_simulation",
        "computer_programming",
        "forecasting"
      ],
      "description": "All available courses"
