{
  "meta": {
    "problem_id": "convenience_store_staffing",
    "source": null,
    "description": "Determine the minimum number of salespersons needed to meet the requirements for each time period in a 24-hour convenience store.",
    "sense": "min",
    "version": 1
  },
  "sets": [
    {
      "name": "TIME_PERIODS",
      "elements": [
        "2:00",
        "6:00",
        "10:00",
        "14:00",
        "18:00",
        "22:00"
      ],
      "description": "Time periods when salespersons start their shifts"
    }
  ],
  "params": [
    {
      "name": "demand",
      "indices": [
        "TIME_PERIODS"
      ],
      "values": {
        "2:00": 10,
        "6:00": 15,
        "10:00": 25,
        "14:00": 20,
        "18:00": 18,
        "22:00": 12
      },
      "description": "Number of salespersons required for each time period"
    }
  ],
  "vars": [
    {
      "name": "x",
      "indices": [
        "TIME_PERIODS"
      ],
      "vartype": "integer",
      "lb": 0,
      "ub": null,
      "description": "Number of salespersons starting their shift at each time period"
    }
  ],
  "objective": {
    "name": "min_total_salespersons",
    "sense": "min",
    "expr": "sum(x[t] for t in TIME_PERIODS)",
    "description": "Minimize the total number of salespersons"
  },
  "constraints": [
    {
      "name": "demand_2:00",
      "expr_lhs": "x['2:00'] + x['22:00']",
      "sense": ">=",
      "expr_rhs": "demand['2:00']",
      "description": "Meet demand for time period 2:00-6:00"
    },
    {
      "name": "demand_6:00",
      "expr_lhs": "x['6:00'] + x['2:00']",
      "sense": ">=",
      "expr_rhs": "demand['6:00']",
      "description": "Meet demand for time period 6:00-10:00"
    },
    {
      "name": "demand_10:00",
      "expr_lhs": "x['10:00'] + x['6:00']",
      "sense": ">=",
      "expr_rhs": "demand['10:00']",
      "description": "Meet demand for time period 10:00-14:00"
    },
    {
      "name": "demand_14:00",
      "expr_lhs": "x['14:00'] + x['10:00']",
      "sense": ">=",
      "expr_rhs": "demand['14:00']",
      "description": "Meet demand for time period 14:00-18:00"
    },
    {
      "name": "demand_18:00",
      "expr_lhs": "x['18:00'] + x['14:00']",
      "sense": ">=",
      "expr_rhs": "demand['18:00']",
      "description": "Meet demand for time period 18:00-22:00"
    },
    {
      "name": "demand_22:00",
      "expr_lhs": "x['22:00'] + x['18:00']",
      "sense": ">=",
      "expr_rhs": "demand['22:00']",
      "description": "Meet demand for time period 22:00-2:00"
    }
  ],
  "graph": null
}