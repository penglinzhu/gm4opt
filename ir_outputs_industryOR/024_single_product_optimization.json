{
  "meta": {
    "problem_id": "single_product_optimization",
    "source": null,
    "description": "Optimize production and workforce to meet demand while maximizing revenue.",
    "sense": "max",
    "version": 1
  },
  "sets": [
    {
      "name": "MONTHS",
      "elements": [
        "1",
        "2",
        "3",
        "4",
        "5",
        "6"
      ],
      "description": "Months in the planning horizon"
    }
  ],
  "params": [
    {
      "name": "demand",
      "indices": [
        "MONTHS"
      ],
      "values": {
        "1": 700,
        "2": 600,
        "3": 500,
        "4": 800,
        "5": 900,
        "6": 800
      },
      "description": "Demand for each month"
    },
    {
      "name": "production_per_worker",
      "indices": [],
      "values": 20,
      "description": "Units produced per worker per month"
    },
    {
      "name": "extra_production_cost",
      "indices": [],
      "values": 5,
      "description": "Cost per extra unit produced"
    },
    {
      "name": "warehouse_cost",
      "indices": [],
      "values": 10,
      "description": "Cost per unit stored in warehouse per month"
    },
    {
      "name": "hiring_cost",
      "indices": [],
      "values": 500,
      "description": "Cost per worker hired"
    },
    {
      "name": "layoff_cost",
      "indices": [],
      "values": 700,
      "description": "Cost per worker laid off"
    },
    {
      "name": "max_extra_units",
      "indices": [],
      "values": 6,
      "description": "Maximum extra units a worker can produce per month"
    },
    {
      "name": "max_worker_change",
      "indices": [],
      "values": 5,
      "description": "Maximum change in number of workers per month"
    }
  ],
  "vars": [
    {
      "name": "extra_units",
      "indices": [
        "MONTHS"
      ],
      "vartype": "integer",
      "lb": 0,
      "ub": null,
      "description": "Extra units produced in each month"
    },
    {
      "name": "warehouse",
      "indices": [
        "MONTHS"
      ],
      "vartype": "integer",
      "lb": 0,
      "ub": null,
      "description": "Units stored in warehouse at the end of each month"
    },
    {
      "name": "workers",
      "indices": [
        "MONTHS"
      ],
      "vartype": "integer",
      "lb": 0,
      "ub": null,
      "description": "Number of workers employed in each month"
    },
    {
      "name": "hired",
      "indices": [
        "MONTHS"
      ],
      "vartype": "integer",
      "lb": 0,
      "ub": null,
      "description": "Number of workers hired in each month"
    },
    {
      "name": "laid_off",
      "indices": [
        "MONTHS"
      ],
      "vartype": "integer",
      "lb": 0,
      "ub": null,
      "description": "Number of workers laid off in each month"
    }
  ],
  "objective": {
    "name": "max_revenue",
    "sense": "max",
    "expr": "sum((production_per_worker * workers[m] + extra_units[m] - demand[m]) * warehouse_cost for m in MONTHS) - sum(extra_units[m] * extra_production_cost for m in MONTHS) - sum(hired[m] * hiring_cost + laid_off[m] * layoff_cost for m in MONTHS)",
    "description": "Maximize revenue by balancing production, storage, and workforce costs"
  },
  "constraints": [
    {
      "name": "initial_workers",
      "expr_lhs": "workers['1']",
      "sense": "==",
      "expr_rhs": "40",
      "description": "Initial number of workers"
    },
    {
      "name": "initial_warehouse",
      "expr_lhs": "warehouse['1']",
      "sense": "==",
      "expr_rhs": "0",
      "description": "Initial warehouse is empty"
    },
    {
      "name": "final_warehouse",
      "expr_lhs": "warehouse['6']",
      "sense": "==",
      "expr_rhs": "0",
      "description": "Final warehouse must be empty"
    },
    {
      "name": "production_balance_1",
      "expr_lhs": "production_per_worker * workers['1'] + extra_units['1'] + warehouse['1']",
      "sense": "==",
      "expr_rhs": "demand['1'] + warehouse['2']",
      "description": "Production balance for month 1"
    },
    {
      "name": "production_balance_2",
      "expr_lhs": "production_per_worker * workers['2'] + extra_units['2'] + warehouse['2']",
      "sense": "==",
      "expr_rhs": "demand['2'] + warehouse['3']",
      "description": "Production balance for month 2"
    },
    {
      "name": "production_balance_3",
      "expr_lhs": "production_per_worker * workers['3'] + extra_units['3'] + warehouse['3']",
      "sense": "==",
      "expr_rhs": "demand['3'] + warehouse['4']",
      "description": "Production balance for month 3"
    },
    {
      "name": "production_balance_4",
      "expr_lhs": "production_per_worker * workers['4'] + extra_units['4'] + warehouse['4']",
      "sense": "==",
      "expr_rhs": "demand['4'] + warehouse['5']",
      "description": "Production balance for month 4"
    },
    {
      "name": "production_balance_5",
      "expr_lhs": "production_per_worker * workers['5'] + extra_units['5'] + warehouse['5']",
      "sense": "==",
      "expr_rhs": "demand['5'] + warehouse['6']",
      "description": "Production balance for month 5"
    },
    {
      "name": "production_balance_6",
      "expr_lhs": "production_per_worker * workers['6'] + extra_units['6'] + warehouse['6']",
      "sense": "==",
      "expr_rhs": "demand['6']",
      "description": "Production balance for month 6"
    },
    {
      "name": "extra_units_limit_1",
      "expr_lhs": "extra_units['1']",
      "sense": "<=",
      "expr_rhs": "max_extra_units * workers['1']",
      "description": "Limit on extra units for month 1"
    },
    {
      "name": "extra_units_limit_2",
      "expr_lhs": "extra_units['2']",
      "sense": "<=",
      "expr_rhs": "max_extra_units * workers['2']",
      "description": "Limit on extra units for month 2"
    },
    {
      "name": "extra_units_limit_3",
      "expr_lhs": "extra_units['3']",
      "sense": "<=",
      "expr_rhs": "max_extra_units * workers['3']",
      "description": "Limit on extra units for month 3"
    },
    {
      "name": "extra_units_limit_4",
      "expr_lhs": "extra_units['4']",
      "sense": "<=",
      "expr_rhs": "max_extra_units * workers['4']",
      "description": "Limit on extra units for month 4"
    },
    {
      "name": "extra_units_limit_5",
      "expr_lhs": "extra_units['5']",
      "sense": "<=",
      "expr_rhs": "max_extra_units * workers['5']",
      "description": "Limit on extra units for month 5"
    },
    {
      "name": "extra_units_limit_6",
      "expr_lhs": "extra_units['6']",
      "sense": "<=",
      "expr_rhs": "max_extra_units * workers['6']",
      "description": "Limit on extra units for month 6"
    },
    {
      "name": "worker_change_1",
      "expr_lhs": "hired['1'] - laid_off['1']",
      "sense": "==",
      "expr_rhs": "workers['1'] - 40",
      "description": "Worker change for month 1"
    },
    {
      "name": "worker_change_2",
      "expr_lhs": "hired['2'] - laid_off['2']",
      "sense": "==",
      "expr_rhs": "workers['2'] - workers['1']",
      "description": "Worker change for month 2"
    },
    {
      "name": "worker_change_3",
      "expr_lhs": "hired['3'] - laid_off['3']",
      "sense": "==",
      "expr_rhs": "workers['3'] - workers['2']",
      "description": "Worker change for month 3"
    },
    {
      "name": "worker_change_4",
      "expr_lhs": "hired['4'] - laid_off['4']",
      "sense": "==",
      "expr_rhs": "workers['4'] - workers['3']",
      "description": "Worker change for month 4"
    },
    {
      "name": "worker_change_5",
      "expr_lhs": "hired['5'] - laid_off['5']",
      "sense": "==",
      "expr_rhs": "workers['5'] - workers['4']",
      "description": "Worker change for month 5"
    },
    {
      "name": "worker_change_6",
      "expr_lhs": "hired['6'] - laid_off['6']",
      "sense": "==",
      "expr_rhs": "workers['6'] - workers['5']",
      "description": "Worker change for month 6"
    },
    {
      "name": "max_worker_change_1",
      "expr_lhs": "hired['1'] + laid_off['1']",
      "sense": "<=",
      "expr_rhs": "max_worker_change",
      "description": "Max worker change for month 1"
    },
    {
      "name": "max_worker_change_2",
      "expr_lhs": "hired['2'] + laid_off['2']",
      "sense": "<=",
      "expr_rhs": "max_worker_change",
      "description": "Max worker change for month 2"
    },
    {
      "name": "max_worker_change_3",
      "expr_lhs": "hired['3'] + laid_off['3']",
      "sense": "<=",
      "expr_rhs": "max_worker_change",
      "description": "Max worker change for month 3"
    },
    {
      "name": "max_worker_change_4",
      "expr_lhs": "hired['4'] + laid_off['4']",
      "sense": "<=",
      "expr_rhs": "max_worker_change",
      "description": "Max worker change for month 4"
    },
    {
      "name": "max_worker_change_5",
      "expr_lhs": "hired['5'] + laid_off['5']",
      "sense": "<=",
      "expr_rhs": "max_worker_change",
      "description": "Max worker change for month 5"
    },
    {
      "name": "max_worker_change_6",
      "expr_lhs": "hired['6'] + laid_off['6']",
      "sense": "<=",
      "expr_rhs": "max_worker_change",
      "description": "Max worker change for month 6"
    }
  ],
  "graph": null
}