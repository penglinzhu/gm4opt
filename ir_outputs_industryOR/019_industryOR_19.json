{
  "meta": {
    "problem_id": "industryOR_19",
    "source": null,
    "description": "Optimize coal distribution from mines to residential areas to minimize transportation cost in ton-kilometers.",
    "sense": "min",
    "version": 1
  },
  "sets": [
    {
      "name": "MINES",
      "elements": [
        "A",
        "B"
      ],
      "description": "Coal mines"
    },
    {
      "name": "AREAS",
      "elements": [
        "1",
        "2",
        "3"
      ],
      "description": "Residential areas"
    }
  ],
  "params": [
    {
      "name": "supply",
      "indices": [
        "MINES"
      ],
      "values": {
        "A": 80,
        "B": 100
      },
      "description": "Monthly coal supply from each mine in tons"
    },
    {
      "name": "demand",
      "indices": [
        "AREAS"
      ],
      "values": {
        "1": 55,
        "2": 75,
        "3": 50
      },
      "description": "Monthly coal demand for each residential area in tons"
    },
    {
      "name": "distance",
      "indices": [
        "MINES",
        "AREAS"
      ],
      "values": {
        "A": {
          "1": 10,
          "2": 5,
          "3": 6
        },
        "B": {
          "1": 4,
          "2": 8,
          "3": 15
        }
      },
      "description": "Distance in kilometers from each mine to each residential area"
    }
  ],
  "vars": [
    {
      "name": "x",
      "indices": [
        "MINES",
        "AREAS"
      ],
      "vartype": "continuous",
      "lb": 0.0,
      "ub": null,
      "description": "Amount of coal transported from each mine to each residential area in tons"
    }
  ],
  "objective": {
    "name": "min_total_ton_kilometers",
    "sense": "min",
    "expr": "sum(distance[m][a] * x[m][a] for m in MINES for a in AREAS)",
    "description": "Minimize the total transportation cost in ton-kilometers"
  },
  "constraints": [
    {
      "name": "supply_A",
      "expr_lhs": "x['A']['1'] + x['A']['2'] + x['A']['3']",
      "sense": ">=",
      "expr_rhs": "supply['A']",
      "description": "Supply constraint for mine A"
    },
    {
      "name": "supply_B",
      "expr_lhs": "x['B']['1'] + x['B']['2'] + x['B']['3']",
      "sense": ">=",
      "expr_rhs": "supply['B']",
      "description": "Supply constraint for mine B"
    },
    {
      "name": "demand_1",
      "expr_lhs": "x['A']['1'] + x['B']['1']",
      "sense": "==",
      "expr_rhs": "demand['1']",
      "description": "Demand constraint for residential area 1"
    },
    {
      "name": "demand_2",
      "expr_lhs": "x['A']['2'] + x['B']['2']",
      "sense": "==",
      "expr_rhs": "demand['2']",
      "description": "Demand constraint for residential area 2"
    },
    {
      "name": "demand_3",
      "expr_lhs": "x['A']['3'] + x['B']['3']",
      "sense": "==",
      "expr_rhs": "demand['3']",
      "description": "Demand constraint for residential area 3"
    }
  ],
  "graph": null
}