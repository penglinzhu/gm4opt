{
  "meta": {
    "problem_id": "industryOR_11",
    "source": "IndustryOR",
    "description": "A certain 24-hour convenience store requires a certain number of salespersons during each time period as follows: 2:00-6:00 - 10 people, 6:00-10:00 - 15 people, 10:00-14:00 - 25 people, 14:00-18:00 - 20 people, 18:00-22:00 - 18 people, 22:00-2:00 - 12 people. Salespersons work at 2:00, 6:00, 10:00, 14:00, 18:00, and 22:00, and work continuously for 8 hours. Determine the minimum number of salespersons needed to meet the requirements.",
    "sense": "min",
    "version": "v1"
  },
  "sets": [
    {
      "name": "T",
      "elements": [
        "2:00",
        "6:00",
        "10:00",
        "14:00",
        "18:00",
        "22:00"
      ],
      "description": "Time periods when salespersons start their shifts"
    }
  ],
  "params": [
    {
      "name": "demand",
      "indices": [
        "T"
      ],
      "values": {
        "2:00": 10.0,
        "6:00": 15.0,
        "10:00": 25.0,
        "14:00": 20.0,
        "18:00": 18.0,
        "22:00": 12.0
      },
      "description": "Number of salespersons required during each time period"
    }
  ],
  "vars": [
    {
      "name": "x",
      "indices": [
        "T"
      ],
      "vartype": "integer",
      "lb": 0.0,
      "ub": null,
      "description": "Number of salespersons starting their shift at each time period"
    }
  ],
  "objective": {
    "name": "min_salespersons",
    "sense": "min",
    "expr": "quicksum(x[t] for t in T)",
    "description": "Minimize the total number of salespersons"
  },
  "constraints": [
    {
      "name": "demand_2:00",
      "expr_lhs": "x['2:00'] + x['22:00']",
      "sense": ">=",
      "expr_rhs": "demand['2:00']",
      "description": "Meet demand for 2:00-6:00"
    },
    {
      "name": "demand_6:00",
      "expr_lhs": "x['6:00'] + x['2:00']",
      "sense": ">=",
      "expr_rhs": "demand['6:00']",
      "description": "Meet demand for 6:00-10:00"
    },
    {
      "name": "demand_10:00",
      "expr_lhs": "x['10:00'] + x['6:00']",
      "sense": ">=",
      "expr_rhs": "demand['10:00']",
      "description": "Meet demand for 10:00-14:00"
    },
    {
      "name": "demand_14:00",
      "expr_lhs": "x['14:00'] + x['10:00']",
      "sense": ">=",
      "expr_rhs": "demand['14:00']",
      "description": "Meet demand for 14:00-18:00"
    },
    {
      "name": "demand_18:00",
      "expr_lhs": "x['18:00'] + x['14:00']",
      "sense": ">=",
      "expr_rhs": "demand['18:00']",
      "description": "Meet demand for 18:00-22:00"
    },
    {
      "name": "demand_22:00",
      "expr_lhs": "x['22:00'] + x['18:00']",
      "sense": ">=",
      "expr_rhs": "demand['22:00']",
      "description": "Meet demand for 22:00-2:00"
    }
  ]
}