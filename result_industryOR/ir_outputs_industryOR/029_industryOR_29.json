      "sense": "==",
      "expr_rhs": "workers['3']",
      "description": "Worker balance for month 3"
    },
    {
      "name": "worker_balance_4",
      "expr_lhs": "workers['3'] + hired['4'] - dismissed['4']",
      "sense": "==",
      "expr_rhs": "workers['4']",
