  "objective": {
    "name": "total_net_profit",
    "sense": "max",
    "expr": "quicksum((unit_price * (production[m] + outsourcing[m]) - raw_material_cost * production[m] - normal_wage * normal_hours_per_day * working_days_per_month * workers[m] - overtime_wage * overtime_hours[m] - inventory_cost * inventory[m] - stockout_cost * stockout[m] - outsourcing_cost * outsourcing[m] - hiring_cost * hired[m] - dismissal_cost * dismissed[m]) for m in Months)",
    "description": "Maximize total net profit over 6 months"
  },
  "constraints": [
    {
      "name": "inventory_balance_1",
      "expr_lhs": "initial_inventory + production['1'] + outsourcing['1'] - demand['1'] - stockout['1']",
      "sense": "==",
      "expr_rhs": "inventory['1']",
      "description": "Inventory balance for month 1"
    },
    {
      "name": "inventory_balance_2",
      "expr_lhs": "inventory['1'] + production['2'] + outsourcing['2'] - demand['2'] - stockout['2']",
      "sense": "==",
      "expr_rhs": "inventory['2']",
      "description": "Inventory balance for month 2"
    },
    {
      "name": "inventory_balance_3",
      "expr_lhs": "inventory['2'] + production['3'] + outsourcing['3'] - demand['3'] - stockout['3']",
      "sense": "==",
      "expr_rhs": "inventory['3']",
      "description": "Inventory balance for month 3"
    },
    {
      "name": "inventory_balance_4",
      "expr_lhs": "inventory['3'] + production['4'] + outsourcing['4'] - demand['4'] - stockout['4']",
      "sense": "==",
      "expr_rhs": "inventory['4']",
      "description": "Inventory balance for month 4"
    },
    {
      "name": "inventory_balance_5",
      "expr_lhs": "inventory['4'] + production['5'] + outsourcing['5'] - demand['5'] - stockout['5']",
      "sense": "==",
      "expr_rhs": "inventory['5']",
      "description": "Inventory balance for month 5"
    },
    {
      "name": "inventory_balance_6",
      "expr_lhs": "inventory['5'] + production['6'] + outsourcing['6'] - demand['6'] - stockout['6']",
      "sense": "==",
      "expr_rhs": "inventory['6']",
      "description": "Inventory balance for month 6"
    },
    {
      "name": "end_inventory_requirement",
      "expr_lhs": "inventory['6']",
      "sense": ">=",
      "expr_rhs": "10000",
      "description": "Ensure at least 10,000 units of inventory by end of June"
    },
    {
      "name": "worker_balance_1",
      "expr_lhs": "initial_workers + hired['1'] - dismissed['1']",
      "sense": "==",
      "expr_rhs": "workers['1']",
      "description": "Worker balance for month 1"
    },
    {
      "name": "worker_balance_2",
      "expr_lhs": "workers['1'] + hired['2'] - dismissed['2']",
      "sense": "==",
      "expr_rhs": "workers['2']",
      "description": "Worker balance for month 2"
    },
    {
