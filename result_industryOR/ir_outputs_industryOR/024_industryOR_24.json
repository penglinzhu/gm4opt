  "objective": {
    "name": "revenue",
    "sense": "max",
    "expr": "quicksum(production_per_worker * workers[t] + extra_units[t] - extra_production_cost * extra_units[t] - storage_cost * stored_units[t] - hiring_cost * hired_workers[t] - layoff_cost * laid_off_workers[t] for t in T)",
    "description": "Maximize revenue by balancing production, storage, hiring, and layoffs"
  },
  "constraints": [
